{
  "manifest_version": 3,
  "name": "isuckscience",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "isuckscience"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/content.js"]
    }
  ],
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}